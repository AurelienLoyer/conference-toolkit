root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.css]
indent_size = 4
tab_width = 4

[*.sass]
tab_width = 4

[*.scss]
tab_width = 4

[{*.cjs,*.js}]
indent_size = 4
tab_width = 4

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_size = 4
tab_width = 4

[{.eslintrc,.babelrc,.stylelintrc,jest.config,.prettierrc,bowerrc,*.json,*.jsb3,*.jsb2,*.graphqlconfig}]
tab_width = 4
